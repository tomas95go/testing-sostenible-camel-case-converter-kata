{
  "name": "basic-testing-template",
  "version": "1.0.0",
  "description": "A simple boilerplate for practicing testing with TypeScript and Jest.",
  "main": "lib/app.js",
  "author": "Tom",
  "license": "ISC",
  "type": "commonjs",
  "scripts": {
    "start": "node lib/app.js",
    "compile": "tsc -b",
    "compile:watch": "tsc -b --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check-updates": "ncu -u"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "jest": "^30.1.3",
    "npm-check-updates": "^16.7.10",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": "22.16.0",
    "npm": "10.9.2"
  },
  "packageManager": "yarn@1.22.22"
}
